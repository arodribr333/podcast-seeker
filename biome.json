{
    "$schema": "https://biomejs.dev/schemas/1.6.2/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn"
            },,
            "correctness": {
                "useExhaustiveDependencies": "warn"
            },
            "style": {
                "noNonNullAssertion": "warn"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "attributePosition": "multiline"
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}
